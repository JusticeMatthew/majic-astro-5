---
import { Image } from "astro:assets";
import navLinks from "$/constants/navLinks.ts";
import mailbox from "$/assets/images/mailbox.svg";
import LogoLight from "$/assets/icons/logo-light.svg";
---

<div
  class="bg-dark-bg relative flex w-screen flex-col items-center justify-center pt-40">
  <Image src={mailbox} alt="mailbox" width={120} class="z-30 -translate-y-10" />
  <figure id="background" class="absolute top-20 z-30 h-80 w-screen bg-black">
  </figure>
  <footer class="z-40 min-h-48 w-screen bg-black">
    <div
      class="container flex h-full flex-col justify-between opacity-75 sm:flex-row md:pl-12">
      <div class="mb-6 flex min-h-full flex-col flex-wrap md:mb-0">
        <LogoLight
          width={32}
          height={32}
          class="fill-light mr-2 inline -translate-y-1"
        />
        <p class="font-calistoga text-level-2">Majic Web Design</p>
        <p class="mr-4 sm:mb-7">Beautiful Web Solutions</p>
        <p>Â© 2025 Majic Design LLC</p>
      </div>
      <div class="grid grid-cols-3 gap-4 pb-6 sm:gap-20">
        <nav class="col-span-1 flex flex-col text-nowrap">
          <p class="mb-1 font-semibold">Menu</p>
          {
            navLinks.map(({ href, label }) => (
              <a
                href={href}
                class="text-min py-1 pr-1 underline-offset-4 hover:underline">
                {label}
              </a>
            ))
          }
        </nav>
        <span class="col-span-2">
          <p class="mb-1 font-semibold">Contact</p>
          <a
            href="#contact"
            class="text-min block py-1 pr-1 underline-offset-4 hover:underline"
            >Send a message</a
          >
          <p class="text-min py-1 pr-1">386-601-9344</p>
          <p class="text-min py-1 pr-1">info@majicwebdesign.com</p>
        </span>
      </div>
    </div>
    <div class="container mb-6 md:pl-12">
      <p class="max-w-prose text-[14px] opacity-60">
        * All Majic website packages include 12 months of support and
        maintenance
      </p>
    </div>
  </footer>
</div>

<style>
  #background {
    clip-path: ellipse(100% 50% at 50% 100%);
  }
</style>
