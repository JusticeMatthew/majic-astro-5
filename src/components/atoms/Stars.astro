<script>
  document.addEventListener("astro:page-load", () => {
    const totalStars = 100;
    const container = document.getElementById("stars-container")!;

    function randomNumber(min: number, max: number) {
      return Math.random() * (max - min) + min;
    }

    function setStarOpacity(pos: number) {
      let opacity = 1;

      if (pos <= 35) {
        opacity = pos / 200;
      }

      return opacity;
    }

    for (let i = 0; i < totalStars; i++) {
      const star = document.createElement("figure");
      star.id = "star";

      star.style.top = `${randomNumber(0, 150)}vh`;
      star.style.left = `${randomNumber(0, 150)}vw`;
      star.style.animationDuration = `${randomNumber(2, 5)}s`;
      star.style.animationDelay = `${randomNumber(0, 5)}s`;

      const pos = parseInt(star.style.top.split(".")[0]);
      star.style.setProperty("--dynamic-opacity", `${setStarOpacity(pos)}`);

      container.appendChild(star);
    }
  });
</script>

<div id="stars-container"></div>

<style is:global>
  #stars-container {
    position: relative !important;
    width: 100%;
    height: 150vh !important;
    overflow: hidden;
    z-index: 10;
  }

  #star {
    position: absolute !important;
    width: 2px;
    height: 2px;
    background-color: #fff;
    border-radius: 50%;
    opacity: var(--dynamic-opacity);
    animation: twinkle 1s infinite;
  }

  @keyframes twinkle {
    0%,
    100% {
      opacity: var(--dynamic-opacity);
    }
    50% {
      opacity: 0.3;
    }
  }
</style>
