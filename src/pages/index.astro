---
import BaseLayout from "@/layouts/BaseLayout.astro";
import GradientBG from "@/components/atoms/GradientBG.astro";
import {
  Landing,
  About,
  Services,
  Examples,
  Contact,
  Stars,
} from "@/components";
---

<BaseLayout>
  <div class="relative">
    <div class="absolute inset-0">
      <GradientBG />
    </div>
    <div class="relative">
      <Landing />
      <About />
      <Services />
    </div>
  </div>
  <div class="relative">
    <figure
      class="to-dark-bg via-dark-bg absolute inset-0 z-10 h-[150vh] w-screen bg-gradient-to-b from-dark-purple via-80%">
    </figure>
    <div class="absolute inset-0 top-0">
      <Stars>
        <Examples slot="examples" />
        <Contact slot="contact" />
      </Stars>
    </div>
  </div>
</BaseLayout>
